{% extends 'base.html.twig' %}

{% block title %}Hello MedecinController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
		.button {
			text-decoration: none;
			padding: 10px;
			background-color: blue;
			border-radius: 10px;
			color: white;
			border: none;
		}
		.button:hover {
			color: red;
		}
	</style>

	<div class="example-wrapper">
		<h1>Medecin id :
			{{  medecin.id }}!
		</h1>

		<h2>Bienvenue dans le cabinet de
			{{medecin.nom}}</h2>
		<p>{{medecin.description}}</p>
		<p>Vien a
			{{medecin.ville }}
			on est bien y'a des pommes wola elles sont bonne çaaaaaaaaaaa mère</p>
		<p>Tel :
			{{medecin.telephone }}</p>

		{% for r in app.user.roles %}
			{% if r == "ROLE_MEDECIN" %}
		<p>
			<a class="button" href="{{ path('medecin_edit',{'medecinId':medecin.id}) }}">Modifier</a>
		</p>
			{% endif %}
		{% endfor %}




	</div>

{% endblock %}
