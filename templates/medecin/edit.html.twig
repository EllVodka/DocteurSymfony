{% extends 'base.html.twig' %}

{% block title %}Edit Mdecin
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
		li {
			text-decoration: none;
		}
		.encadrer {
			border: thin solid black;
			border-radius: 20px;
			padding: 20px;
			margin: 30px;
			display: flex;
			flex-direction: column;
		}
		.error {
			color: red;
			border-color: red;

		}
		input {
			border-radius: 10px;
			padding: 5px;
			width: 50%
		}
		button {
			padding: 10px;
			background-color: blue;
			border-radius: 10px;
			color: white;
			border: none;
			float: right;
		}
		button:after {
			content: " üöΩ";
		}
		.error li {
			list-style: "‚ùå ";
		}
        .button{
			text-decoration: none;
			padding: 10px;
			background-color: blue;
			border-radius: 10px;
			color: white;
			border: none;
		}
		.button:hover{
			color:red;
		}
	</style>

	<h1>Edit Medecin</h1>
    <div class="example-wrapper">
		{{ form_start(form) }}
		<div class="encadrer">
			{{ form_label(form.nom) }}
			<span class="error">{{ form_errors(form.nom) }}</span>
			{{ form_widget(form.nom) }}
		</div>

		<div class="encadrer">
			{{ form_label(form.description) }}
			<span class="error">{{ form_errors(form.description) }}</span>
			{{ form_widget(form.description) }}
		</div>

		<div class="encadrer">
			{{ form_label(form.ville) }}
			<span class="error">{{ form_errors(form.ville) }}</span>
			{{ form_widget(form.ville) }}
		</div>

		<div class="encadrer">
			{{ form_label(form.telephone) }}
			<span class="error">{{ form_errors(form.telephone) }}</span>
			{{ form_widget(form.telephone) }}
		</div>

		<span class="ajout">{{ form_widget(form.Ajouter) }}</span>
		{{ form_end(form) }}

	</div>

	<a class="button" href="{{ path('medecin_view',{'id':medecin.id}) }}">Revenir a votre carte</a>
{% endblock %}
