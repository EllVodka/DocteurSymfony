{% extends 'base.html.twig' %}

{% block title %}Hello MedecinController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
        .margin-bottom{
            margin-bottom:10vh;
        }
	</style>

	<div class="example-wrapper">
		<h1>Rendez-vous a venir</h1>

		<table class="table margin-bottom">
			<thead>
				<tr>
					<th>Consultation</th>
					<th>Praticien</th>
					<th>Creneau</th>
					<th>Durée</th>
				</tr>
			</thead>
			<tbody>
				{% for rdv in rdvRepository %}
                {% if date(rdv.creneau) > date() %}
					<tr>
						<td>{{ rdv.typeConsultation.libelle }}</td>
						<td>{{ rdv.medecin.nom }}</td>
						<td>{{ rdv.creneau | date('d/m/Y h:m') }}</td>
						<td>{{ rdv.typeConsultation.duree }}</td>
					</tr>
                    {% endif %}
				{% endfor %}
			</tbody>

		</table>

        <h1>Rendez-vous passé</h1>

		<table class="table">
			<thead>
				<tr>
					<th>Consultation</th>
					<th>Praticien</th>
					<th>Creneau</th>
					<th>Durée</th>
				</tr>
			</thead>
			<tbody>
				{% for rdv in rdvRepository %}
                {% if date(rdv.creneau) < date() %}
					<tr>
						<td>{{ rdv.typeConsultation.libelle }}</td>
						<td>{{ rdv.medecin.nom }}</td>
						<td>{{ rdv.creneau | date('d/m/Y h:m') }}</td>
						<td>{{ rdv.typeConsultation.duree }}</td>
					</tr>
                    {% endif %}
				{% endfor %}
			</tbody>

		</table>


	</div>

{% endblock %}
