{% extends 'base.html.twig' %}

{% block title %}Hello RDVController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
		.rdv-button{
			text-decoration: none;
			padding: 10px;
			background-color: blue;
			border-radius: 10px;
			color: white;
			border: none;
		}
		.rdv-button:hover{
			color:red;
		}
	</style>

	<div class="example-wrapper">
		<h1>Rendez-vous</h1>

		<table class="table">
			<thead>
				<tr>
					<th>Type de consultation</th>
					<th>Durée (min) </th>
					<th>Praticien</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				{% for tc in typeConsultationRepositorys %}
					<tr>
						<td>
							{{ tc.libelle }}
						</td>
						<td>
							{{ tc.duree }}
						</td>
						<td>
                        {% for m in tc.medecin %}
                        {{ m.nom }}
                        <br>
                        {% else %}
                        Aucun praticien trouvées
                        {% endfor %}
                        </td>
						<td>
							<a class="rdv-button" href="{{path('app_rdv_add',{'idConsult':tc.id})}}">Prendre Rendez-vous</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="4">Aucune données trouvée</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
