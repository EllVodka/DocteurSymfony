{% extends 'base.html.twig' %}

{% block title %}Hello MedecinController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		<h1>Type de consultation :
			{{  rdv.typeConsultation.libelle }}!
		</h1>

		<h2>Vous serez pris en charge par
			{{ rdv.medecin.nom }}</h2>
		<p>A ce creneau horaire {{ rdv.creneau | date("Y/d/m h:m") }}, pendant {{ rdv.typeConsultation.duree }} minute.</p>

	</div>

{% endblock %}
